<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <script src="/javascripts/vue.js"></script>
    <script src="/javascripts/vue-resource.js"></script>
    <!-- Bootstrap -->
    <link href="http://cdn.bootcss.com/bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap-theme.css">
    <link rel='stylesheet' href='/stylesheets/datastyle.css' />
    <!-- this is uesd when the project is over -->
    <!-- <script src="/javascripts/vue.min.js"></script> -->
</head>

<body>
    <div id="formbackground" style="position:absolute; z-index:-2;">
        <img src="/images/data-bg.jpg" height="100%" width="100%" />
    </div>
    <!--导航栏-->
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                </button>
                <a class="navbar-brand" href="/">VideoSegmentation</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">About us</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
    <div id="selector">
        <div class="container" v-if="currentState === 1">
            <div class="row">
                <form>
                    <div class="form-group">
                        <label for="fileBtn">选择文件</label>
                        <div class="container">
                            <div class="row" id="fileBtn">
                                <div class="col-md-10">
                                    <input id="photoCover" class="form-control" type="text" placeholder="File Path" v-bind:value="filePath" readonly>
                                </div>
                                <div class="upfilebox col-md-2">
                                    <input id="videoFile" type="file" v-on:change="checkFileName()">
                                    <button class="btn btn-primary btn-block">Browse</button>
                                </div>
                            </div>
                        </div>
                        <label for="submitBtn" v-if="uploadOpen">确认上传</label>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-10">
                                </div>
                                <div class="col-md-2">
                                    <button v-if="uploadOpen" id="submitBtn" class="btn btn-primary btn-block" v-on:click="uploadFile()">确认上传</button>
                                </div>
                                <p v-if="fileWarning !== ''" class="file-warning">{{ fileWarning }}</p>
                                <p v-if="fileWarning === '正在上传文件中...请稍后...'" class="file-warning">已上传 {{ (progress * 100).toFixed(2) }}%</p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="container" v-if="currentState == 2">
            <div class="row">
                <div class="canvasAlign">
                    <canvas v-if="!gifShow" id="interact" width="0" height="0"></canvas>
                </div>
            </div>
            <div class="row">
                <button v-if="uploadMaskOpen" id="submitMaskBtn" class="btn btn-primary" v-on:click="uploadMask()">确认结果</button>
            </div>
            <div class="row">
                <img v-if="gifShow" v-bind:src="gifPath" class="img-responsive">
            </div>
        </div>
    </div>
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="/javascripts/bind/data.js"></script>
</body>

</html>
